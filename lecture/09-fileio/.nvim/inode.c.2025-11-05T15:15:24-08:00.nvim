#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <sys/stat.h>

int main() {
  char *buffer;

  printf("enter path\n");
  size_t len = 0;
  getline(&buffer, &len, stdin);

  struct stat sb;

  int status = stat(buffer, &sb);

  if (S_ISREG(sb.st_mode))
    printf("Regular file\n");
  else if (S_ISDIR(sb.st_mode))
    printf("Directory\n");
  else
    printf("Other\n");
}
