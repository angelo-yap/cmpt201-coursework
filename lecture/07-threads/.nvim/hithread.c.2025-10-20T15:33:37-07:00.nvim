#include <pthread.h>
#include <stdio.h>
#include <stdlib.h>

void *printHello(void *word) {
  char *realword = (char *) word;
  printf("%s\n", realword);
  return 0;
}

int main() {

  pthread_t thread; //= malloc(sizeof(pthread_t));

  int status = pthread_create(&thread, NULL, &printHello, (void *)"hi");

  pthread_join(thread, NULL);

  return 0;
}
